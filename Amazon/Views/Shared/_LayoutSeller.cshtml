<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body style="background-color:lightblue">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Amazon Seller", "Index", "SellerHome", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "SellerHome")</li>
                    <li>@Html.ActionLink("Add Product", "AddProduct", "SellerHome")</li>
                    <li>@Html.ActionLink("View Product", "Index", "SellerProductView")</li>
                    <li>@Html.ActionLink("Pending Request", "PendingProductRequest", "SellerProductView")</li>
                    <li>@Html.ActionLink("Trending Products", "Index", "SellerProductInTrend")</li>
                    <li>@Html.ActionLink("Trend Request", "Index", "SellerTrendRequest")</li>
                    <li>@Html.ActionLink("Order Received", "SellerOrderRecived", "OrderHistory")</li>




                </ul>

                <ul class="nav navbar-right">
                    @if (User.Identity.Name == "")
                    {
                        <li>@Html.ActionLink("Register", "Register", "RegisterLogin")</li>
                        <li>@Html.ActionLink("LogIn", "LogIn", "RegisterLogin")</li>
                    }
                    else
                    {
                        <li>@Html.ActionLink(" Welcome " + @User.Identity.Name, "Index", "Home")</li>
                        <li>@Html.ActionLink("LogOut", "LogOut", "RegisterLogin")</li>
                    }
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        <hr />
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My AMAZON Dream</p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
