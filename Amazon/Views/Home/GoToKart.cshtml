@model IEnumerable<Amazon.Models.Kart>

@{
    ViewBag.Title = "GoToKart";
    long TotalPrice = 0;
    var addressFlag = 1;
    if(Model.Count() == 0)
    {
        addressFlag = 0;
    }
}
<br />
<h2>Kart</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Product.ProductName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Product.ProductPrice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Product.ProductName)
            </td>
            <td>
                @{
                    var ActualPrice = item.Product.ProductPrice - (item.Product.ProductPrice * item.Product.ProductDiscount) / 100;
                    ActualPrice *= item.Quantity;
                    TotalPrice += Convert.ToInt64(ActualPrice);

                }
                @ActualPrice
            </td>
            <td>
                <button class="btn btn-default"> @Html.ActionLink("-", "Subtract", new { id = item.ID }) </button>
                @Html.DisplayFor(modelItem => item.Quantity)
                <button class="btn btn-default"> @Html.ActionLink("+", "Add", new { id = item.ID , Product_ID = item.Product_ID }) </button>
            </td>
            <td>
                <button class="btn btn-default"> @Html.ActionLink("Remove", "Remove", new { id = item.ID, Product_ID = item.Product_ID }) </button>
            </td>
        </tr>
        if(item.Quantity == 0)
        {
            addressFlag = 0;
        }
     }

</table>

<div>
    Total Amount : @TotalPrice

</div>
<p>
    @if (addressFlag == 1)
    {
        @Html.ActionLink("Add Address", "AddAddress")
    }
    else
    {
        <p> Quantity of your Product are not sufficient to place order </p>
    }
</p>
